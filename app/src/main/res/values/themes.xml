<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BankingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/Navy</item>
        <item name="colorPrimaryVariant">@color/DarkGreen</item>
        <!-- Apply statusBarColor and windowLightStatusBar only for API level 23 and above -->
        <item name="android:statusBarColor" tools:targetApi="23">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

    </style>

    <style name="Theme.BankingApp" parent="Base.Theme.BankingApp" />
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/purple_200</item>
    </style>
    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    </style>
</resources>